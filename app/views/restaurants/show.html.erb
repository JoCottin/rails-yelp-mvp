  <h1><%= @restaurant.name %></h1>
  <h2><%= @restaurant.address %></h2>
  <h3><%= @restaurant.phone_number %></h3>
  <h4><%= @restaurant.category %></h4>

  <ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= "#{review.content} avec une note de #{review.rating}" %></li>
  <% end %>
  </ul>

  <p><%= link_to "add a review", new_restaurant_review_path(@restaurant) %></p>

  <p><%= link_to "back to list", restaurants_path %></p>
